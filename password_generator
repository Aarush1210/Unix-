#!/bin/bash

generate_password() {
    echo "Enter password length:"
    read length
    password=$(tr -dc 'A-Za-z0-9!@#$%^&*()' < /dev/urandom | head -c $length)
    echo "Generated Password: $password"
}

save_password() {
    echo "Enter a password to save:"
    read pass
    echo "$pass" >> saved_passwords.txt
    echo "Password saved."
}

view_passwords() {
    if [ -f saved_passwords.txt ]
    then
        echo "Saved Passwords:"
        cat saved_passwords.txt
    else
        echo "No passwords saved yet."
    fi
}

delete_passwords() {
    if [ -f saved_passwords.txt ]
    then
        rm saved_passwords.txt
        echo "All saved passwords deleted."
    else
        echo "Nothing to delete."
    fi
}

theme_password() {
    echo "Choose a theme:"
    echo "1. Simple"
    echo "2. Symbols"
    echo "3. Numbers Only"
    read choice

    echo "Enter password length:"
    read len

    if [ "$choice" -eq 1 ]
    then
        chars="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
    elif [ "$choice" -eq 2 ]
    then
        chars="!@#$%^&*()+=_-"
    else
        chars="0123456789"
    fi

    password=$(cat /dev/urandom | tr -dc "$chars" | head -c $len)
    echo "Generated Theme Password: $password"
}

while true
do
    echo "-----------------------------"
    echo "     PASSWORD MENU"
    echo "-----------------------------"
    echo "1. Generate Password"
    echo "2. Save Password"
    echo "3. View Saved Passwords"
    echo "4. Delete Saved Passwords"
    echo "5. Generate THEME Password"
    echo "6. Exit"
    echo "Enter your choice:"
    read ch

    if [ "$ch" -eq 1 ]
    then
        generate_password
    elif [ "$ch" -eq 2 ]
    then
        save_password
    elif [ "$ch" -eq 3 ]
    then
        view_passwords
    elif [ "$ch" -eq 4 ]
    then
        delete_passwords
    elif [ "$ch" -eq 5 ]
    then
        theme_password
    elif [ "$ch" -eq 6 ]
    then
        exit
    else
        echo "Invalid choice."
    fi
done
